{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",

    "rootDir": "./src",
    "outDir": "./dist",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "declaration": false,
    "sourceMap": true,

    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

